<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Students</title>
</head>
<body>
    <h2>Student List</h2>
    <a href="/auth/logout">Logout</a>
    <ul>
        <% students.forEach(student => { %>
            <li>
                <%= student.name %> - <%= student.age %> - <%= student.course %>
                <form action="/students/update/<%= student._id %>" method="POST" style="display:inline;">
                    <input type="text" name="name" placeholder="Name" value="<%= student.name %>">
                    <input type="number" name="age" placeholder="Age" value="<%= student.age %>">
                    <input type="text" name="course" placeholder="Course" value="<%= student.course %>">
                    <button type="submit">Update</button>
                </form>
                <form action="/students/delete/<%= student._id %>" method="POST" style="display:inline;">
                    <button type="submit">Delete</button>
                </form>
            </li>
        <% }) %>
    </ul>
    <h3>Add Student</h3>
    <form action="/students/create" method="POST">
        <input type="text" name="name" placeholder="Name" required>
        <input type="number" name="age" placeholder="Age" required>
        <input type="text" name="course" placeholder="Course" required>
        <button type="submit">Add</button>
    </form>
</body>
</html>
